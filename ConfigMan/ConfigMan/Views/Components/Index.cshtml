<div class="controller">
    @model ConfigMan.ViewModels.ComponentIndex
    @{
        ViewBag.Title = Model.Message.Title;
    }
    
    <h2>
        @Html.DisplayFor(model => model.Message.Title)
    </h2>
    <p>
        @Html.DisplayFor(model => model.Message.Tekst)
    </p>

    <div class="sy-div">

        @Html.ActionLink("Nieuwe Component", "Create", "", new { @class = "sy-acreate" }) |
        @Html.ActionLink("Terug naar Menu", "Menu", "Components", new { @class = "sy-a" })
        | Filter tonen (aan/uit) &nbsp;

        @Html.CheckBoxFor(model => model.Filter, new { @class = "sy-switch", @onclick = "valueChanged()" })
        | @Html.ActionLink("Wis alle filters", "Index", "Components", new { filterstr = "N" }, new { @class = "sy-a" }) |
        @Html.HiddenFor(model => model.Filterstr, new { @class = "sy-hiddenfilter" })
    </div>
    <p>&nbsp;</p>


    <table class="sy-table">
        <tr>
            
            <th>Actie</th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentLijst[0].ComponentNameTemplate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentLijst[0].Authorized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentLijst[0].VendorName)
            </th>
        </tr>
       
        <tr class="sy-filter">
            <td>
                @Html.ActionLink("Pas filter toe", "Index", 
                      new {filterStr="Y"}, new {@class = "sy-url"})                                                                               
            </td>
            <td>
                @Html.EditorFor(model => model.ComponentFilter, new { htmlAttributes = new { @class = "sy-input", @autofocus = "autofocus", @onchange = "SetFilterUrl('Y')" } })
                @Html.ValidationMessageFor(model => model.ComponentFilter, "", new { @class = "text-danger"})
            </td>
            <td>
                @Html.EditorFor(model => model.AuthFilter, new { htmlAttributes = new { @class = "sy-input", @autofocus = "autofocus", @onchange = "SetFilterUrl('Y')" } })
                @Html.ValidationMessageFor(model => model.AuthFilter, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.VendorFilter, new { htmlAttributes = new { @class = "sy-input", @autofocus = "autofocus", @onchange = "SetFilterUrl('Y')" } })
                @Html.ValidationMessageFor(model => model.VendorFilter, "", new { @class = "text-danger" })
            </td>
        </tr>
        
        @if (Model.ComponentLijst != null)
        {
            foreach (var item in Model.ComponentLijst)
            {
              
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.ComponentID, new { @class = "sy-hiddenid" })
                        @Html.ActionLink("Bewerk", "Edit", new { id = item.ComponentID }, new { @class = "sy-alist" }) |
                        @Html.ActionLink("Bekijk", "Details", new { id = item.ComponentID }, new { @class = "sy-alist" }) |
                        @Html.ActionLink("Verwijder", "Delete", new { id = item.ComponentID }, new { @class = "sy-alist" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComponentNameTemplate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Authorized)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorName)
                    </td>



                </tr>

            }
        }

    </table>

    <p>
        *** Einde van de lijst ***
    </p>


</div>
