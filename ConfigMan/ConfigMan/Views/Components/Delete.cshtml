<div class="controller">
    @model ConfigMan.ViewModels.ComponentVM
    @{
        ViewBag.Title = Model.Message.Title;
    }

    <div>
        <h2>
            @Html.DisplayFor(model => model.Message.Title)
        </h2>
        <hr />
        <dl class="sy-dl">
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.ComponentNameTemplate)
            </dt>
            <dd class="sy-dd">
                @Html.DisplayFor(model => model.ComponentNameTemplate)
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.Authorized)
            </dt>
            <dd class="sy-dd">
                @Html.DisplayFor(model => model.Authorized)
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.VendorName)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.VendorName)
            </dd>


        </dl>
        <div>
            @Html.HiddenFor(model => model.ComponentID, new { @class = "sy-hiddenid" })
            @Html.HiddenFor(model => model.ComponentFilter, new { @class = "sy-hiddenfilter" })
            @Html.HiddenFor(model => model.VendorFilter, new { @class = "sy-hiddenfilter" })
            @Html.HiddenFor(model => model.AuthFilter, new { @class = "sy-hiddenfilter" })
            @Html.HiddenFor(model => model.Filterstr, new { @class = "sy-hiddenfilter" })
        </div>
        <p>
            @Html.DisplayFor(model => model.Message.Tekst)
        </p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Verwijder" class="sy-button" /> |  @Html.ActionLink("Terug naar lijst", "Index", "", new { @class = "sy-url" })

            </div>
        }

    </div>
</div>
