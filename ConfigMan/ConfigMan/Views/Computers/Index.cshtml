<div class="controller">
    @model ConfigMan.ViewModels.ComputerIndex
    <h2>
        @Html.DisplayFor(model => model.Message.Title)
    </h2>
    <p>
        @Html.DisplayFor(model => model.Message.Tekst)
    </p>
    <p>
        @Html.ActionLink("Nieuwe Computer", "Create", "", new { @class = "sy-a" }) |
        @Html.ActionLink("Terug naar Menu", "Menu", "Computers", new { @class = "sy-a" })
    </p>

    <table class="sy-table">
        @if (Model.ComputerLijst != null)
        {
            var i = 0;

            foreach (var item in Model.ComputerLijst)
            {
                if (i == 0)
                {
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(modelItem => item.ComputerName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => item.ComputerPurchaseDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => item.OS)
                        </th>

                    </tr>
                }
                i = i + 1;

                <tr>
                    <td>
                        @Html.ActionLink("Bewerk", "Edit", new { id = item.ComputerID }, new { @class = "sy-a" }) |
                        @Html.ActionLink("Bekijk", "Details", new { id = item.ComputerID }, new { @class = "sy-a" }) |
                        @Html.ActionLink("Verwijder", "Delete", new { id = item.ComputerID }, new { @class = "sy-a" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComputerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComputerPurchaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OS)
                    </td>

                </tr>
            }
        }

    </table>
    <p>
        *** Einde van de lijst ***
    </p>




</div>