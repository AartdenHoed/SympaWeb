<div class="controller">
    @model ConfigMan.ViewModels.InstallationVM

    @{
        ViewBag.Title = Model.Message.Title;
    }


    <div>
        <h2>
            @Html.DisplayFor(model => model.Message.Title)
        </h2>
        <hr />
        <dl class="sy-dl">
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.ComputerName)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.ComputerName)
            </dd>

            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.ComponentName)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.ComponentName)
            </dd>

            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.Release)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.Release) &nbsp;
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.VendorName)
            </dt>
            <dd class="sy-dd">
                @Html.DisplayFor(model => model.VendorName) &nbsp;
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.MeasuredDateTime)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.MeasuredDateTime) &nbsp;
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.InstallDate)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.InstallDate) &nbsp;
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.StartDateTime)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.StartDateTime)
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.EndDateTime)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.EndDateTime) &nbsp;
            </dd>


            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.Location) &nbsp;
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.Location) &nbsp;
            </dd>
            <dt class="sy-dt">
                @Html.DisplayNameFor(model => model.Count)
            </dt>

            <dd class="sy-dd">
                @Html.DisplayFor(model => model.Count) &nbsp;
            </dd>

        </dl>

        <p>
            @Html.DisplayFor(model => model.Message.Tekst)
        </p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Verwijder" class="sy-button" /> |  @Html.ActionLink("Terug naar lijst", "Index", "", new { @class = "sy-a" })

            </div>
        }

    </div>
</div>
