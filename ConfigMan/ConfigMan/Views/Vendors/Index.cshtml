
<div class="controller">
    @model IEnumerable<ConfigMan.Vendor>

    @{
        ViewBag.Title = "Vendor Overzicht";
    }

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="sympaMsg">
        <p>@ViewBag.SympaMsg</p>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.VendorID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.VendorID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.VendorID })
                </td>
            </tr>
        }

    </table>
</div>